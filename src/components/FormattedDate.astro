---
export interface Props {
  date: Date
  timeToRead: number
}

const { date, timeToRead } = Astro.props
---

<time class="font-bold text-sm" datetime={date.toISOString()}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
  -
  {timeToRead} min read
</time>
